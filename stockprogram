con = sqlite3.connect("ph.db")
cursor = con.cursor()
def kayittablosu():
    cursor.execute("CREATE TABLE IF NOT EXISTS giris(ad TEXT, soyad TEXT, sifre INT)")
    con.commit()
kayittablosu()

