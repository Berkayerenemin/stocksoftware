def ofd():
    ftypes = [('htm file',"*.htm")]
    ttl  = "Open File"
    dir1 = 'C:\\'
    app.fileName = askopenfilename(filetypes = ftypes, initialdir = dir1, title = ttl)
    print (app.fileName)

        #************** Main System ************************
class PhernSoftware(tk.Tk):

    def __init__(self, *args, **kwargs):
        tk.Tk.__init__(self, *args, **kwargs)
        self.geometry("500x500")
        
        self.title_font = tkfont.Font(family='Helvetica', size=12, weight="bold", slant="italic")
        self.title("PhernSoftware")

        #********************Add Menu***********************
        menu= Menu(self)  
        self.config(menu = menu)
        subMenu= Menu(menu)
        menu.add_cascade(label = "Hakkinda",menu = subMenu)
        subMenu.add_command(label = "Versiyon",command= lambda: self.show_frame("UpdatePage"))
        subMenu.add_command(label = "Yetkili")
        
        #*************** Main Settings *********************
        
        # the container is where we'll stack a bunch of frames
        # on top of each other, then the one we want visible
        # will be raised above the others
        container = tk.Frame(self)
        container.pack(side="top", fill="both", expand=True)
        container.grid_rowconfigure(0, weight=1)
        container.grid_columnconfigure(0, weight=1)
        self.frames = {}
        for F in (StartPage, PageOne, PageTwo, PageThree, EndPage, UpdatePage, PageFour):
            page_name = F.__name__
            frame = F(parent=container, controller=self)
            self.frames[page_name] = frame

            # put all of the pages in the same location;
            # the one on the top of the stacking order
            # will be the one that is visible.
            frame.grid(row=0, column=0, sticky="nsew")

        self.show_frame("StartPage")

    def show_frame(self, page_name):
        '''Show a frame for the given page name'''
        frame = self.frames[page_name]
        frame.tkraise()
        
        #************ Pages *********************************

class StartPage(tk.Frame):
    def __init__(self, parent, controller):
        tk.Frame.__init__(self, parent)
        self.controller = controller
        controller.geometry("500x400")

        #*********************** Sign Up ********************
        
        def kayitgiris():
            ad = entry_1.get()
            soyad = entry_3.get()
            sifre = entry_2.get()
            cursor.execute("INSERT INTO giris(ad,soyad,sifre) VALUES(?,?,?)",(ad,soyad,sifre))
            con.commit()
            return controller.show_frame("PageFour")

        #********************* Start Page Design ************
            
        label_0 = Label(self,text="Sistem Giris Formu",width=20,font=("bold", 15))
        label_0.place(x=90,y=13)

        label_1 = Label(self,text="Adiniz",width=20,font=("bold", 10))
        label_1.place(x=80,y=90)

        entry_1 = Entry(self)
        entry_1.place(x=240,y=90)

        label_3 = Label(self, text="Soyadiniz",width=20,font=("bold", 10))
        label_3.place(x=80,y=120)

        entry_3 = Entry(self)
        entry_3.place(x=240,y=120)

        label_2 = Label(self, text="Sifre",width=20,font=("bold", 10))
        label_2.place(x=68,y=150)

        entry_2 = Entry(self)
        entry_2.place(x=240,y=150)

        button1 = tk.Button(self, text='Kayit Ol',width=20,bg='brown',fg='white',font=("bold"),
                            command = kayitgiris).place(x=180,y=190)
        button3 = tk.Button(self, text='Giris',width=20,bg='brown',fg='white',font=("bold"),
                            command=lambda: controller.show_frame("PageFour")).place(x=180,y=230)
        button2 = tk.Button(self, text='Ücretsiz Özellikler',width=20,bg='brown',fg='white',font=("bold"),
                            command=lambda: controller.show_frame("PageOne")).place(x=180,y=270)

