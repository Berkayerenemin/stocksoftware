        SystemFrame = Frame(self, width = 1000, height=700, bd=5, relief='raise')
        SystemFrame.pack(side=RIGHT)

        def stokd():
            TopFrame = Frame(SystemFrame, width = 1000, height=350 ,bd=5, relief='raise')
            TopFrame.pack(side=TOP)
